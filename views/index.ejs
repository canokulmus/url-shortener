<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>

<body>

    <div class="container">

        <h1>URL Shrinker</h1>

        <form action="/shortUrls" method="post" class="my-4 form-check-inline w-100">

            <div class="row">

                <div class="col">

                    <label for="fullUrl" class="visually-hidden">Full Url</label>
                    <input type="url" name="fullUrl" id="fullUrl" placeholder="URL" required class="form-control mr-2">

                </div>
                <div class="col">

                    <button type="submit" class="btn btn-success">Shrink</button>
                </div>

            </div>

        </form>

        <hr>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(url=> {%>
                    <tr>

                        <td>
                            <a href="<%= url.full %>">
                                <%= url.full %>
                            </a>
                        </td>
                        <td>
                            <a href="<%= url.short %>">
                                <%= url.short %>
                            </a>
                        </td>
                        <td>
                            <%= url.clicks %>
                        </td>


                    </tr>
                    <% }); %>

            </tbody>
        </table>


    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
</body>

</html>